{
  "dashboard": {
    "title": "智链OS - API Gateway监控",
    "tags": ["zhilian-os", "api-gateway"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "HTTP请求总数",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "请求/秒"
          }
        ]
      },
      {
        "id": 2,
        "title": "活跃请求数",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "http_requests_active",
            "legendFormat": "活跃请求",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "请求数"
          }
        ]
      },
      {
        "id": 3,
        "title": "请求响应时间 (P50, P95, P99)",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "响应时间"
          }
        ]
      },
      {
        "id": 4,
        "title": "HTTP状态码分布",
        "type": "piechart",
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum by (status) (rate(http_requests_total[5m]))",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "最慢的端点 (Top 10)",
        "type": "table",
        "gridPos": {
          "x": 0,
          "y": 16,
          "w": 24,
          "h": 8
        },
        "targets": [
          {
            "expr": "topk(10, avg by (endpoint, method) (rate(http_request_duration_seconds_sum[5m]) / rate(http_request_duration_seconds_count[5m])))",
            "format": "table",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
