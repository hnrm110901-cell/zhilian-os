# Environment Variables Template

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/zhilian_os
REDIS_URL=redis://localhost:6379/0

# AI/LLM
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_API_BASE=https://api.openai.com/v1
MODEL_NAME=gpt-4-turbo-preview

# Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Graph Database (本体层 / 推理层)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=changeme

# WeChat Work (企业微信)
WECHAT_CORP_ID=your-corp-id
WECHAT_CORP_SECRET=your-corp-secret
WECHAT_AGENT_ID=your-agent-id

# Feishu (飞书)
FEISHU_APP_ID=your-app-id
FEISHU_APP_SECRET=your-app-secret

# External API - Aoqiwei (奥琦韦微生活)
AOQIWEI_API_KEY=your-aoqiwei-api-key
AOQIWEI_BASE_URL=https://api.aoqiwei.com
AOQIWEI_TIMEOUT=30
AOQIWEI_RETRY_TIMES=3

# External API - Pinzhi (品智收银)
PINZHI_TOKEN=your-pinzhi-token
PINZHI_BASE_URL=http://ip:port/pzcatering-gateway
PINZHI_TIMEOUT=30
PINZHI_RETRY_TIMES=3

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Application
APP_ENV=development
APP_DEBUG=true
APP_PORT=8000
APP_HOST=0.0.0.0

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
